<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.library.mapper.StudentMapper">
    <select id="getStudentById" resultMap="studentObject">
        select * from students
        where number = #{number};
    </select>

    <insert id="insertStudent" parameterType="Student">
        insert into students(number,name,password,email,phone,grade,class,major,gender)
        values (#{number},#{name},#{password},#{email},#{phone},#{grade},#{clazz},#{major},#{gender});
    </insert>

    <resultMap id="studentObject" type="Student">
        <id property="number" column="number"/>
        <result property="clazz" column="class"/>
    </resultMap>
</mapper>